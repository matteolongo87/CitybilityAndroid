<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"> 
    <!-- the theme applied to the application or activity -->
    <style name="CitybilityTheme"  parent="android:Theme.Holo.Light">
    	<item name="android:textColor">@color/citybility_gray_text</item>    	
        <item name="android:actionBarStyle">@style/CitybilityActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/CitybilityActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/headerBarText</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:editTextStyle">@style/CitybilityEditText</item>
        <item name="android:listViewStyle">@style/listView</item>
    	       
    </style>

    <!-- ActionBar styles -->
    <style name="CitybilityActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/citybility_green</item>
        <item name="android:titleTextStyle">@style/CitybilityActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CitybilityActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/headerBarText</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="CitybilityActionBarTabText" parent="android:Widget.Holo.Light.ActionBar.TabText">
        <item name="android:background">@color/citybility_green</item>
        <item name="android:textColor">@color/headerBarText</item>
    </style>
    
    
    <!-- Edit text -->
    <style name="CitybilityEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/citybility_gray_text</item>
        <item name="android:textColorHint">@color/citybility_gray_hint_text</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
    
    <style name="CitybilityTheme.noAnimTheme" parent="CitybilityTheme">
  		<item name="android:windowAnimationStyle">@null</item>
	</style>
    

    <style name="CitybilityTheme.noTitleBar_noAnimTheme" parent="android:style/Theme.NoTitleBar">
  		<item name="android:windowAnimationStyle">@null</item>
	</style>
</resources>
