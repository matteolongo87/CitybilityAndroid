<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Unpressed State -->
    <item
        android:state_focused="false"
        android:state_selected="false"
        android:state_pressed="false"
        >
        <shape>
            <corners
                android:radius="25dp"/>
            <solid
                android:color="@color/badge_background_color1"/>
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item
        android:state_focused="false"
        android:state_selected="false"
        android:state_pressed="true"
        >
        <shape>
            <corners
                android:radius="25dp"/>
            <solid
                android:color="@color/badge_background_color2"/>
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

</selector>
