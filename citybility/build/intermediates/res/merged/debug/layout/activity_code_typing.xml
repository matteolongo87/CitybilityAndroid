<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.citybility.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/ct_mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text_m"
            android:textColor="@color/citybility_light_gray_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/ct_subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dummy_text_l"
            android:textColor="@color/citybility_light_gray_text"
            android:textSize="15dp" />

        <com.citybility.app.custom.PageIndicatorsView
            android:id="@+id/codeIndicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="24dp"
            custom:active_point_color="@color/citybility_green"
            custom:point_border_color="@color/citybility_green"
            custom:point_border_width="1.5dp"
            custom:point_color="#EEEEEE"
            custom:point_margin="25dp"
            custom:point_number="6"
            custom:point_radius="7dp"
            custom:step_mode="true" />

        <View
            android:id="@+id/extSeparator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor2" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:columnCount="3"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tc_btn1"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="1" />

            <Button
                android:id="@+id/tc_btn2"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="2" />

            <Button
                android:id="@+id/tc_btn3"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="3" />

            <Button
                android:id="@+id/tc_btn4"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="4" />

            <Button
                android:id="@+id/tc_btn5"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="5" />

            <Button
                android:id="@+id/tc_btn6"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="6" />

            <Button
                android:id="@+id/tc_btn7"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="7" />

            <Button
                android:id="@+id/tc_btn8"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="8" />

            <Button
                android:id="@+id/tc_btn9"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="9" />

            <Button
                android:id="@+id/tc_btncanc"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="&lt;" />

            <Button
                android:id="@+id/tc_btn0"
                style="@style/keypad.key"
                android:layout_width="@dimen/keypad_key_width"
                android:layout_height="@dimen/keypad_key_height"
                android:text="0" />
        </GridLayout>
    </LinearLayout>

</ScrollView>