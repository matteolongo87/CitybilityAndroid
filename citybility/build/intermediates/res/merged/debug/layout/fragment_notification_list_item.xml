<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.citybility.app"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="20dp" >

    <com.citybility.app.custom.RoundedImageView
        android:id="@+id/notificationThumb"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/default_photo"
        android:src="@drawable/photo_default"
        custom:border_radius="3dp"
        custom:border_width="0dp"
        custom:shape="rectangular" />

    <ImageView
        android:id="@+id/rightArrowIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:contentDescription="@string/dummy_text_s"
        android:src="@drawable/ic_arrow_right" />

    <LinearLayout
        android:id="@+id/notificationInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/rightArrowIcon"
        android:layout_toStartOf="@id/rightArrowIcon"
        android:layout_toRightOf="@id/notificationThumb"
        android:layout_toEndOf="@id/notificationThumb"
        android:paddingLeft="14dp"
        android:paddingTop="0dp"
        android:paddingRight="14dp"
        android:paddingBottom="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       		android:layout_marginTop="-4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dummy_text_xl"
            android:textColor="@color/citybility_gray_text"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/notificationSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
       		android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dummy_text_s"
            android:textColor="@color/citybility_gray_text"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
