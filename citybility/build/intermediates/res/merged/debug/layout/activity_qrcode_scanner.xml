<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <fragment
        android:id="@+id/scanner_fragment"
        android:name="com.citybility.app.QRCodeScannerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/qrc_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/qrc_action"
                android:textColor="@color/citybility_gray_text"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/qrc_subAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qrc_sub_action"
                android:textColor="@color/citybility_gray_text"
                android:textSize="15dp"
                 />

            <TextView
                android:id="@+id/qrc_offlineQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qrc_offline_question"
                android:textColor="@color/citybility_gray_text"
                android:textSize="15dp" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/qrc_bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
           	android:layout_alignParentBottom="true"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white" 
            android:orientation="vertical">
        
         <TextView
                android:id="@+id/qrc_manualTypingMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qrc_manual_code_typing"
                android:textColor="@color/citybility_gray_text"
                android:textSize="15dp" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/qrc_btn_flash" 
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@id/qrc_bottomBar"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_light_off"
            android:layout_margin="10dp"/>
        
    </RelativeLayout>

</merge>